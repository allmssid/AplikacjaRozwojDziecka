@model Aplikacja_wspierajaca_rozwoj_dziecka.Models.Umiejetnosc

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Umiejetnosc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Kierunek" class="control-label"></label>
                    <select asp-for="Kierunek" class="form-control"
                            asp-items="Html.GetEnumSelectList<ObszarRozwoju>()">
                        <option value="">-- wybierz kierunek --</option>
                    </select>
                    <span asp-validation-for="Kierunek" class="text-danger"></span>
                </div>


            <div class="form-group">
                <label asp-for="ZalecanyWiekOdRoku" class="control-label"></label>
                <input asp-for="ZalecanyWiekOdRoku" class="form-control" />
                <span asp-validation-for="ZalecanyWiekOdRoku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZalecanyWiekDoRoku" class="control-label"></label>
                <input asp-for="ZalecanyWiekDoRoku" class="form-control" />
                <span asp-validation-for="ZalecanyWiekDoRoku" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CzyWlasna" /> @Html.DisplayNameFor(model => model.CzyWlasna)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
