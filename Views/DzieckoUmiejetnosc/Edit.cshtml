@model Aplikacja_wspierajaca_rozwoj_dziecka.Models.DzieckoUmiejetnosc

<h2>Edytuj status umiejętności</h2>

<p>
    Dziecko: <strong>@Model.Dziecko?.Imie @Model.Dziecko?.Nazwisko</strong><br />
    Umiejętność: <strong>@Model.Umiejetnosc?.Nazwa</strong>
</p>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DzieckoId" />

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control"
                asp-items="Html.GetEnumSelectList<StatusUmiejetnosci>()">
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Komentarz" class="control-label"></label>
        <textarea asp-for="Komentarz" class="form-control"></textarea>
        <span asp-validation-for="Komentarz" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-controller="Dziecko" asp-action="Details" asp-route-id="@Model.DzieckoId" class="btn btn-secondary">Anuluj</a>
</form>
